# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_SECRET_KEY=change-me-in-production-use-at-least-50-random-characters
DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
{% if database == 'postgresql' -%}
DATABASE_URL=postgresql://{{ project_slug }}_user:{{ project_slug }}_password@localhost:5432/{{ project_slug }}_db
{% else -%}
# For development (SQLite):
DATABASE_URL=sqlite:///db.sqlite3
# For production (PostgreSQL):
# DATABASE_URL=postgresql://{{ project_slug }}_user:{{ project_slug }}_password@localhost:5432/{{ project_slug }}_db
{% endif -%}

{% if cache == 'redis' -%}
# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
{% endif %}

# Static and Media
{% if media_storage == 'aws-s3' -%}
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_STORAGE_BUCKET_NAME={{ project_slug }}-media
AWS_S3_REGION_NAME=us-east-1
{% elif media_storage == 'gcp-gcs' -%}
GS_BUCKET_NAME={{ project_slug }}-media
GS_PROJECT_ID=your-project-id
# Set GOOGLE_APPLICATION_CREDENTIALS to path of service account key
{% elif media_storage == 'azure-storage' -%}
AZURE_ACCOUNT_NAME=your-account-name
AZURE_ACCOUNT_KEY=your-account-key
AZURE_CONTAINER=media
{% endif %}

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use:
# EMAIL_BACKEND=anymail.backends.mailgun.EmailBackend
# ANYMAIL_MAILGUN_API_KEY=your-api-key
# ANYMAIL_MAILGUN_SENDER_DOMAIN=mg.example.com
DEFAULT_FROM_EMAIL={{ project_slug }}@example.com
SERVER_EMAIL={{ project_slug }}@example.com

{% if use_sentry -%}
# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
{% endif %}

{% if observability_level == 'full' -%}
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME={{ project_slug }}
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
{% endif %}

{% if auth_backend in ['jwt', 'both'] -%}
# JWT
JWT_ACCESS_TOKEN_LIFETIME=5  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)
{% endif %}

{% if use_stripe -%}
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret
{% endif %}

{% if use_search == 'opensearch' -%}
# OpenSearch
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=False
{% endif %}

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
{% if security_profile == 'strict' -%}
# In production with HTTPS:
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
{% endif %}

# CORS (for frontend development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
{% if observability_level != 'minimal' -%}
LOG_FORMAT=json
{% else -%}
LOG_FORMAT=console
{% endif %}
