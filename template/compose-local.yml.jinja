services:
  db:
    image: postgres:16-alpine
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "8432:5432"
    env_file:
      - ./.envs/.local

{% if cache == 'redis' %}
  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
{% endif %}

  mailpit:
    image: axllent/mailpit:latest
    ports:
      - "1025:1025"
      - "8025:8025"
{% if background_tasks in ['temporal', 'both'] %}

  temporal:
    image: temporalio/auto-setup:latest
    depends_on:
      - db
    environment:
      - DB=postgresql
      - DB_PORT=5432
      - POSTGRES_USER={{ project_slug }}_user
      - POSTGRES_PWD={{ project_slug }}_password
      - POSTGRES_SEEDS=db
      - DYNAMIC_CONFIG_FILE_PATH=config/dynamicconfig/development-sql.yaml
    ports:
      - "7233:7233"
    volumes:
      - ./temporal/dynamicconfig:/etc/temporal/config/dynamicconfig
    healthcheck:
      test: ["CMD", "temporal", "workflow", "list", "--address", "temporal:7233"]
      interval: 10s
      timeout: 5s
      retries: 5

  temporal-ui:
    image: temporalio/ui:latest
    depends_on:
      - temporal
    environment:
      - TEMPORAL_ADDRESS=temporal:7233
      - TEMPORAL_CORS_ORIGINS=http://localhost:3000
    ports:
      - "8080:8080"

  temporal-worker:
    build: .
    command: python manage.py run_temporal_worker
    depends_on:
      - temporal
      - db
{% if cache == 'redis' %}
      - redis
{% endif %}
    environment:
      - TEMPORAL_ADDRESS=temporal:7233
      - DATABASE_URL=postgresql://{{ project_slug }}_user:{{ project_slug }}_password@db:5432/{{ project_slug }}_db
{% if cache == 'redis' %}
      - REDIS_URL=redis://redis:6379/0
{% endif %}
    volumes:
      - .:/app
{% endif %}
{% if observability_level == 'full' %}

  jaeger:
    image: jaegertracing/all-in-one:latest
    ports:
      - "16686:16686"  # UI
      - "4318:4318"    # OTLP gRPC
    environment:
      COLLECTOR_OTLP_ENABLED: "true"
{% endif %}

volumes:
  postgres_data:
{% if cache == 'redis' %}
  redis_data:
{% endif %}
